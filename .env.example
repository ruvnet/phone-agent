# Phone Agent - Environment Variables

# Webhook Configuration
# ---------------------

# The signing secret from Resend (required)
WEBHOOK_SIGNING_SECRET=your_resend_signing_secret

# Target Webhook Configuration
# ---------------------------

# The URL of the target webhook (required)
TARGET_WEBHOOK_URL=https://phone-agent.pages.dev/api/schedule

# The authentication token for the target webhook (required)
TARGET_WEBHOOK_AUTH_TOKEN=your_target_webhook_auth_token

# General Settings
# ---------------

# Set to "true" to enable debug logging (optional, default: false)
DEBUG_WEBHOOKS=false

# Set to "true" to store failed webhook payloads (optional, default: true)
STORE_FAILED_PAYLOADS=true

# Email Service Configuration
# --------------------------

# Resend API key for sending emails
RESEND_API_KEY=your_resend_api_key

# Sender email address
SENDER_EMAIL=noreply@example.com

# Sender name
SENDER_NAME=AI Phone Agent

# Default timezone for date/time formatting
DEFAULT_TIMEZONE=UTC

# Bland.ai Service Configuration
# ----------------------------

# Bland.ai API key
BLAND_AI_API_KEY=your_bland_ai_api_key

# Bland.ai base URL
BLAND_AI_BASE_URL=https://api.bland.ai

# Maximum call duration in minutes
MAX_CALL_DURATION_MINUTES=30

# Default retry count for API calls
DEFAULT_RETRY_COUNT=3

# Cloudflare Pages Configuration
# ----------------------------

# Cloudflare Pages API endpoint for scheduling calls
CLOUDFLARE_SCHEDULE_ENDPOINT=https://phone-agent.pages.dev/api/schedule

# Cloudflare API token for authentication
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token